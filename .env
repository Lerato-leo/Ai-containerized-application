# AI Financial Wellness Application - Environment Configuration
# Production Environment Variables

# Application Environment
NODE_ENV=production
APP_NAME=AI-Financial-Wellness
APP_VERSION=1.0.0

# Backend Server Configuration
BACKEND_PORT=3000
BACKEND_HOST=0.0.0.0

# Frontend Server Configuration
FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0

# Database Configuration (JSON-based for now)
DATA_DIR=/data
DATABASE_FILE=/data/users.json
RESULTS_FILE=/data/results.json

# API Configuration
API_BASE_URL=http://backend:3000
API_TIMEOUT=30000

# AI/LLM Configuration
GEMINI_API_KEY=${GEMINI_API_KEY}
AI_MODEL=gemini-pro
AI_PROVIDER=google

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Docker & Kubernetes Configuration
DOCKER_IMAGE_BACKEND=leratomatamela1/ai-finance-backend:latest
DOCKER_IMAGE_FRONTEND=leratomatamela1/ai-finance-frontend:latest
KUBERNETES_NAMESPACE=ai-finance
KUBERNETES_REPLICAS_BACKEND=2
KUBERNETES_REPLICAS_FRONTEND=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_HEALTH_SCORING=true
ENABLE_RECOMMENDATIONS=true
FEATURE_DEBUG_MODE=false

# Monitoring & Analytics
ENABLE_MONITORING=true
ENABLE_LOGGING=true
METRICS_PORT=9090

# Application Metadata
CREATED_DATE=2025-12-02
MAINTAINER=lerato-leo
REPOSITORY=https://github.com/Lerato-leo/Ai-containerized-application
